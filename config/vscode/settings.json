{
    // WORKBENCH
    "workbench.colorCustomizations": {
        "[One Dark Pro]": {
            "badge.background": "#ffffff10",
            "editor.linkedEditingBackground": "#ffffff10",
            //"tab.activeBorderTop": "#528bff"
            "tab.activeBorderTop": "#4d78cc",
            "tab.activeBorder": "#00000000",
            "widget.shadow": "#0000008c"
        },
        "[Tokyo Night]": {
            "widget.shadow": "#0000008c"
        },
        "[Tokyo Night Storm]": {
            "widget.shadow": "#0000008c"
        }
    },
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.commandPalette.history": 0,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.languageDetection": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.layoutControl.type": "toggles",
    "workbench.list.smoothScrolling": true,
    "workbench.settings.editor": "json",
    "workbench.tips.enabled": false,
    "breadcrumbs.enabled": false,
    // EDITOR
    "editor.bracketPairColorization.enabled": false,
    "editor.codeLens": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    //"editor.hover.enabled": false,
    "editor.fontFamily": "JetBrains Mono, Cascadia Code, Noto Sans Mono, monospace",
    "editor.fontLigatures": true,
    "editor.inlayHints.enabled": "off",
    "editor.lineHeight": 1.6,
    "editor.linkedEditing": true,
    "editor.minimap.renderCharacters": false,
    "editor.parameterHints.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true,
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": false,
    "editor.stickyTabStops": true,
    "editor.suggestSelection": "first",
    // DEBUGGER
    "debug.console.closeOnEnd": true,
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "commandCenter",
    "launch": {
        "configurations": [
            {
                "name": "Python",
                "type": "debugpy",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal"
            },
        ]
    },
    // FILE EXPLORER
    "explorer.compactFolders": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.venv": true
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // TERMINAL
    "accessibility.signals.terminalBell": {
        "sound": "on"
    },
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.fontFamily": "Cascadia Mono, Consolas, monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [
                "-NoLogo"
            ],
        }
    },
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.smoothScrolling": true,
    // WINDOW
    "window.commandCenter": true,
    "window.dialogStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.titleBarStyle": "custom",
    // ANNOYANCES
    "chat.agent.enabled": false,
    "chat.commandCenter.enabled": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "inlineChat.lineNaturalLanguageHint": false,
    "security.workspace.trust.enabled": false,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.initialHint": false,
    "update.showReleaseNotes": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    // PROGRAMMING LANGUAGES CONFIG
    "html.format.indentInnerHtml": true,
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.suggest.paths": false,
    "javascript.validate.enable": false,
    "typescript.suggest.paths": false,
    "[javascript]": {
        "editor.semanticHighlighting.enabled": false,
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "files.trimFinalNewlines": false
    },
    "[plaintext]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordWrap": "bounded",
        "files.trimTrailingWhitespace": false
    },
    "[powershell]": {
        "files.eol": "\r\n"
    },
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "eeyore.yapf"
    },
    "[shellscript]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        }
    },
    // EXTENSIONS CONFIG
    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.folders.theme": "classic",
    "path-autocomplete.disableUpOneFolder": false,
    "path-autocomplete.excludedItems": {
        "**": {
            "when": "**/*.html",
            "context": "(src|href)=.*"
        }
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "window.customTitleBarVisibility": "auto",
}
